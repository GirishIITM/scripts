#!/bin/bash
# open favourite sites with browser through rofi menu
input=$(rofi -dmenu -i -scroll-method 1 -p 'ï‰¨ open' <  ~/.config/sites.conf | cut -d'	' -f2)

if [[ -n "$input" ]] && [ "$input" != "new" ]
then
	${BROWSER:-chrome} $input
elif [ "$input" = "new" ]
then
	konsole -e vim "$HOME/.config/sites.conf"
fi
